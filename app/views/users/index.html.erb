<h1 align="center">All Alpha Bloggers</h1>
<!-- It is going to give a list of all users with its gravatar and the article. -->
<div align="center">
  <%= will_paginate %> <!-- añado el paginate al ppo y al final del codigo lo volvere a hacer para que aparezca al final de la pagina -->
  <% @users.each do |user| %>    <!-- para cada usuario aparece: -->
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>  <!-- su avatar -->
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>   <!-- su nombre -->
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li> <!-- el número de artículos que tiene -->
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>